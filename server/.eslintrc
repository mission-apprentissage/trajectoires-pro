{
  "root": true,
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  "plugins": ["mocha"],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "mocha/no-skipped-tests": "error",
    "mocha/no-exclusive-tests": "error",
    "node/no-missing-import": "off"
  },
  "overrides": [
    {
      "files": "tests/**/*.js",
      "rules": {
        "node/no-unpublished-require": 0
      }
    }
  ]
}
