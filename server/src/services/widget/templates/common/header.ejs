<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
<script defer data-domain="<%= plausibleDomain %>" src="https://plausible.io/js/script.manual.local.outbound-links.tagged-events.pageview-props.js"></script>

<script>
  setInterval(() => {
    document.body && parent.postMessage(document.body.offsetHeight, '*');
  }, 50);

  function collapse(id, btnExpandId, btnCollapseId) {
    document.querySelector(id).classList.toggle("collapse-show");
    document.querySelector(btnExpandId).classList.toggle("collapse-button-hide");
    document.querySelector(btnCollapseId).classList.toggle("collapse-button-hide");
  }

  document.addEventListener("DOMContentLoaded", function(event) {
    plausible('pageview', {
      props: <%- JSON.stringify(plausibleCustomProperties) %>
    })

    parent.postMessage(document.body.offsetHeight, '*');
  });
</script>

